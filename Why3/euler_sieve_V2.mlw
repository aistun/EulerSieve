predicate inv_remove_products (nexts: array int) (marked: array bool) =
  nexts.length = marked.length /\
  not marked[2] /\
  forall i. 0 <= i < nexts.length ->
            i < nexts[i] <= nexts.length

predicate inv_nexts (nexts: array int) (n: int) =
  forall i. 0 <= i < n ->
            i < nexts[i] <= n
