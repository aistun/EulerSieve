let rec remove_products (nexts: array int) (marked: array bool)
                        (max: int) (n: int) : unit
  requires { (* 2 <= p <= max + 1 /\*) 2 <= n <= max }
  requires { nexts.length = marked.length = max + 1 }
  requires { inv_remove_products nexts marked }
  ensures { inv_remove_products nexts marked }
  = let rec loop p =
    requires { 1 <= p <= max }
    requires { 2 <= n <= max }
    requires { inv_remove_products nexts marked }
    ensures { inv_remove_products nexts marked }
    variant { max - nexts[p] }
    let next = nexts[p] in
    if 0 <= next < max + 1 then
      if n * next <= max then begin
        marked[n * next] <- true;
        if marked[next] then begin
          nexts[p] <- nexts[next];
          loop p
        end else
          loop next
      end in
    if n * n <= max then begin
      marked[n * n] <- true;
      loop n
    end  

let euler_sieve (max: int) : array int
  requires { max >= 2 }
= let nexts = make (max + 1) 0 in
  let marked = make (max + 1) false in
  for i = 0 to max do
     invariant { inv_nexts nexts i }
     nexts[i] <- i + 1
  done;
  let rec loop n =
    requires { 2 <= n <= max + 1 } 
    requires { inv_remove_products nexts marked }
    ensures { inv_remove_products nexts marked }
    variant { max + 1 - n }
    if n <> max + 1 then begin
      remove_products nexts marked max n;
      loop nexts[n]
    end in
  loop 2;
  let rec count (p: int) (cnt: int) =
    requires { 2 <= p <= max }
    requires { cnt >= 1 }
    requires { inv_remove_products nexts marked }
    (* requires { cnt = count_unmarked nexts marked 2 (p + 1) } *)
    ensures { result >= 1 }
    ensures { inv_remove_products nexts marked }
    (* ensures { result = length_nexts nexts (max + 1) } *)
    variant { max + 1 - nexts[p] }
    let next = nexts[p] in
    if next = max + 1 then cnt
    else
      if marked[next] then begin
        nexts[p] <- nexts[next];
        count p cnt
      end else
        count next (cnt + 1) in
  (* let cnt = count_unmarked nexts marked (max + 1) in *)
  let primes = make (count 2 1) 0 in
  let ref p = 0 in
  let ref i = 2 in
  while i <> max + 1 do
    invariant { inv_remove_products nexts marked }
    invariant { 0 <= i <= max + 1 }
    (* invariant { p = count_unmarked nexts marked 2 i } *)
    variant { max + 1 - i }
    if not marked[i] then begin
      primes[p] <- i;
      p <- p + 1
    end;
    i <- nexts[i]
  done;
  primes

